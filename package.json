{
  "name": "oph-virkailija-style-guide",
  "version": "0.19.0",
  "description": "A collection of component styles based on Sketch specs",
  "scripts": {
    "start": "parallelshell \"npm run watch\" \"npm run serve\"",
    "watch": "watch \"npm run build\" src demos pages",
    "serve": "browser-sync start --config config/browser-sync.config.js",
    "build": "npm run build-css && npm run minify-css && npm run build-styleguide",
    "build-css": "postcss -c config/postcss.config.js && postcss -c config/postcss.config.modules.js",
    "minify-css": "cssnano --no-zindex oph-styles.css oph-styles-min.css",
    "build-styleguide": "documentjs",
    "update-theme": "documentjs -f",
    "watch-theme": "watch \"update-theme\" theme",
    "copy": "cp -a oph-styles-min.css demos styleguide ../virkailija-styles/docs",
    "clean": "rimraf styleguide/* dist/* oph-styles.css oph-styles-min.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Opetushallitus/virkailija-styles.git#styleguide"
  },
  "dependencies": {
    "browser-sync": "2.18.8",
    "cssnano": "3.10.0",
    "cssnano-cli": "1.0.5",
    "documentjs": "0.4.4",
    "parallelshell": "2.0.0",
    "postcss": "5.2.6",
    "postcss-cli": "2.6.0",
    "postcss-cssnext": "2.9.0",
    "postcss-smart-import": "0.6.0",
    "postcss-inline-svg": "2.3.0",
    "rimraf": "2.6.1",
    "watch": "1.0.2"
  }
}
